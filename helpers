#!/usr/bin/env bash

export DOTFILES_PATH="$HOME"/.dotfiles/dotfiles # Just for install the dotfiles

NORMAL_TEXT='\e[m'

GREEN='\e[32;1m'
PURPLE='\e[35;1m'
RED='\e[31;1m'
YELLOW='\e[33;1m'

git_clone() {
  git clone https://github.com/"$1" "$2"
}

symlink() {
  ln -sfnv "$1" "$2"
}

error_text() {
  echo -e "${RED}##### $* #####${NORMAL_TEXT}"
  sleep 3
}

header_text() {
  clear
  echo -e "${PURPLE}##### $* #####${NORMAL_TEXT}"
  echo ""
  sleep 3
}

success_text() {
  echo -e  "${GREEN}##### $* #####${NORMAL_TEXT}"
  sleep 3
}

warning_text() {
  echo -e "${YELLOW}##### $* #####${NORMAL_TEXT}"
  sleep 3
}
