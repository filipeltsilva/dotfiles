#!/usr/bin/env bash

GREEN="\033[1;32m"
RED="\033[1;31m"
YELLOW="\033[1;33m"

NO_COLOR="\033[0m"

function message_info() {
  echo -e "##### ${YELLOW} ${1} ${NO_COLOR} #####"
  pause
}

function message_okay() {
  echo -e "##### ${GREEN} ${1} ${NO_COLOR} #####"
  pause
}

function message_warning() {
  echo -e "##### ${RED} ${1} ${NO_COLOR} #####"
  pause
}

function pause() {
  sleep 2
  echo
}
