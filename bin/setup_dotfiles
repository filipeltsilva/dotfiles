#!/usr/bin/env bash

# SCRIPT NAME: setup_dotfiles
# CREATION DATE: 2016-10-12
#
#
# DESCRIPTION: This script automates my dotfiles' symbolic linking and it installs some tools that my workflow needs
# to work.
#
# AUTHOR: Filipe Lemos

source ./functions/link_files
source ./functions/messages

message_info "GIT SETUP"
link_file $HOME/.dotfiles/git/gitconfig $HOME/.gitconfig
link_file $HOME/.dotfiles/git/gitignore_global $HOME/.gitignore_global

message_info "VIM SETUP"
message_info "Vim-plug setup"
if [ ! -d ~/.vim/autoload ]; then
  message_info "Installing Vim-plug"
  curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
  https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
else
  message_okay "Vim-plug was already installed in this system"
fi

link_file $HOME/.dotfiles/vim/gvimrc $HOME/.gvimrc
link_file $HOME/.dotfiles/vim/vimrc $HOME/.vimrc

message_info "ZSH SETUP"
message_info "Installing Oh My ZSH!"
if [ ! -d $HOME/.oh-my-zsh ]; then
  sh -c "$(curl -fsSL https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
else
  message_okay "Oh My ZSH was already installed in this system"
fi

link_file $HOME/.dotfiles/zsh/zshrc $HOME/.zshrc
chsh -s /bin/zsh $USER
