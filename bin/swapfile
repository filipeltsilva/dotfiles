#!/usr/bin/env bash

if [[ ! -f /swapfile ]]
then
  sudo touch /swapfile
  sudo fallocate -l $1 /swapfile
  sudo chmod 600 /swapfile
  sudo mkswap /swapfile
  sudo swapon /swapfile

  echo ""
  echo "Add the line below in the /etc/fstab so the swap file will be mounted at every system start"
  echo "/swapfile swap swap sw 0 0"
else
  echo "The swap file already exists in this system. Nothing to do!"
fi
