#!/bin/bash

source ./helpers/linking_files
source ./helpers/messages

vim_setup() {
  message_info "SETUP DO VIM"
  linking_file $HOME/.dotfiles/vim/gvimrc $HOME/.gvimrc
  linking_file $HOME/.dotfiles/vim/vimrc $HOME/.vimrc

  message_info "SETUP DO VIM-PLUG"
  if [ ! -d ~/.vim/autoload ]; then
    message_info "Instalando o Vim-plug"
    curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  else
    message_okay "O Vim-plug já está instalado e configurado"
  fi
}

export -f vim_setup
