[user]
	name = Filipe Lemos
	email = contato@filipelemos.com
[color]
	ui = true
	status = always
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = /usr/local/bin/diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = /usr/local/bin/diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[color "status"]
	changed = red bold
	added = green bold
	untracked = cyan
