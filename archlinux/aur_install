packages=(
  insomnia-bin
  librewolf-bin
  rar
  skypeforlinux-stable-bin
  spotify
  stockfish
  ttf-ms-fonts
  visual-studio-code-bin
  xp-pen-tablet
)

echo "Installing AUR support by yay"
git clone https://aur.archlinux.org/yay-git.git
(
  cd yay-git || exit
  makepkg -si
  rm -rf yay-git
)

echo "Installing AUR Packages"
yay -S "${packages[@]}"
