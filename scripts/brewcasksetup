#!/bin/bash

echo "Updating repositories and packages"
echo
sleep 2
brew cask update
brew cask upgrade

echo "Installing Caskroom"
echo
sleep 2
brew install caskroom/cask/brew-cask

echo "Installing applications"
echo
sleep 2
brew cask install android-file-transfer appcleaner filezilla iterm2 slack spotify spotify-notifications teamviewer utorrent vlc

echo "Installing browsers"
echo
sleep 2
brew cask install google-chrome opera
brew cask install firefox-pt-br firefoxdeveloperedition

echo "Installing development tools"
echo
sleep 2
brew cask install atom diffmerge poedit

echo "Installing and configuring Docker"
echo
sleep 2
brew cask install virtualbox
brew install docker boot2docker
boot2docker init
boot2docker up

echo "Cleaning the cache"
echo
sleep 2
brew cask cleanup
