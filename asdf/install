#!/usr/bin/env bash

# shellcheck source=../helpers
. ../helpers

header_text "ASDF SETUP"

if [[ ! -d $HOME/.asdf ]]
then
  git clone https://github.com/asdf-vm/asdf.git "$HOME"/.asdf

  symlink "$DOTFILES_PATH"/asdf/.asdfrc "$HOME"/.asdfrc
  symlink "$DOTFILES_PATH"/asdf/.default-gems "$HOME"/.default-gems
  symlink "$DOTFILES_PATH"/asdf/.default-npm-packages "$HOME"/.default-npm-packages
  symlink "$DOTFILES_PATH"/asdf/.tool-versions "$HOME"/.tool-versions
else
  echo "Nothing to do here!"
  exit
fi

success_text "ASDF SETUP IS COMPLETE!"
