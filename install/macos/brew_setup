echo "HOMEBREW SETUP"
echo "Configuring Brew"
echo "Installing Brew applications"
brew install "${brewApplications[@]}"

echo "Configuring Brew Cask"
brew tap caskroom/cask
brew tap caskroom/fonts

echo "Installing Brew Cask applications"
brew cask install "${brewcaskApplications[@]}"

echo "Deleting unecessary files"
brew cleanup
brew cask cleanup -n
