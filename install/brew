applications=(
  ack
  bash
  coreutils
  doxygen
  ffmpeg
  findutils --with-default-names
  git-lfs
  grep --with-default-names
  gzip
  htop-osx
  hub
  libav
  ntfs-3g
  openssh
  p7zip
  rsync
  speedtest_cli
  tmux
  tree
  unrar
  utf8proc
  vim --override-system-vi
  wget
  youtube-dl
  zsh
)

message_info "Configuring Brew"
brew tap homebrew/dupes
brew tap homebrew/fuse

message_info "Installing Brew applications"
brew install "${applications[@]}"
