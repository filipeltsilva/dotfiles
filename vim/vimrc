"----------------------------------------
" GENERAL SETTINGS
"----------------------------------------
filetype plugin indent on

set autoindent
set backspace=eol,indent,start
set copyindent
set history=1000
set mouse=a
set nocompatible
set nowrap
set showcmd
set showmatch
set showmode
set title
set ttyfast
set ul=1000
set visualbell
set wildmenu
set wildmode=longest,list

" Autoloading .vimrc file
if has("autocmd")
    autocmd BufWritePost $HOME/.dotfiles/vim/vimrc source $MYVIMRC
endif

" Encoding
set encoding = utf-8
set fileencoding = utf-8
set fileencodings = utf-8

" Search
set hlsearch
set ignorecase
set incsearch
set smartcase

"----------------------------------------
" KEYMAPS
"----------------------------------------
" Shortcut for edit the vimrc file in another tab
let mapleader = ","
nmap <leader>v :tabedit $MYVIMRC<CR>


"----------------------------------------
" PLUGINS
"----------------------------------------
call plug#begin()
    " COLOR SCHEMES
    Plug 'flazz/vim-colorschemes'

    " IMPROVING THE VIM FUNCTIONALITY
    Plug 'ervandew/supertab'
    Plug 'Townk/vim-autoclose'
    
    " CSS
    Plug 'ap/vim-css-color'

    "FRONT-END
    Plug 'mattn/emmet-vim'
    
    " INTEGRATION WITH GIT
    Plug 'airblade/vim-gitgutter'
    Plug 'tpope/vim-fugitive'

call plug#end()

"----------------------------------------
" PLUGINS SETTINGS
"----------------------------------------

"----------------------------------------
" VISUAL
"----------------------------------------
colorscheme obsidian
set background=dark
set cursorline
set expandtab
set number
set ruler
set shiftwidth=4
set smarttab
set softtabstop=4
set tabstop=4
set t_Co=256
set title
syntax on
