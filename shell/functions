function brew_update() {
  brew update

  for application in $(brew list); do
    brew install "${application}"
  done

  brew cleanup -n
}

function brewcask_update() {
  rm -rf $(brew --cache)
  brew update

  for application in $(brew cask list); do
    brew cask install --force "${application}"
  done

  brew cask cleanup -n
}

function local_server() {
  python -m SimpleHTTPServer ${1}
}
